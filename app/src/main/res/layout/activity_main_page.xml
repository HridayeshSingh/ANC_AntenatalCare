<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_patientDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/patient_s_details_n"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView_pregnancyDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/pregnancy_details_n"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView_treatmentDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/treatment_details_of_patient_n"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView_investigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/investigation_of_patient_n"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView_appointmentDates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/appointment_dates_with_doctor_n"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView_complaints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/complaints_n"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView_imageSample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/image_sample_n"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>